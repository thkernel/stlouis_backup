$("ul.errors").html("");
<% if @time_unit.errors.any? %>
  <% @time_unit.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".time-units").html("<%= escape_javascript(render 'index') %>");
  $("#time-unit-modal").modal("hide");
 
<% end %>
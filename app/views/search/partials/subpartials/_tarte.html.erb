<div class="">
    <div class="row">
        <!-- Stats par banques -->
        <div class="col-md-6">
            <div class="content">
                <div class="content-title">
                    <h3>Com total par banque</h3>
                </div>
                <div class="content-body">
                    <%= pie_chart @commissions_chart_pie, messages: {empty: "Pas de données"}, legend: "left", thousands: ".", decimal: ",", library: { plotOptions: { pie: { dataLabels: {enabled: true,
                format: '<b>{point.y:,.0f}</b><br>{point.percentage:.1f}%'},showInLegend: true}}}, :id => "bank", adapter: "highcharts" %>
                </div>

            </div>
        </div>
        <!-- Stats par acres -->
        <div class="col-md-6">
             <div class="content">
                <div class="content-title">
                    <h3>Com nette <%= current_company.name %></h3>
                </div>
                <div class="content-body">
                    <%= pie_chart @commissions_chart_pie_by_company_commission, messages: {empty: "Pas de données"}, legend: "left", thousands: ".", decimal: ",", library: { plotOptions: { pie: { dataLabels: {enabled: true,
                format: '<b>{point.y:,.0f}</b><br>{point.percentage:.1f}%'},showInLegend: true}}},  adapter: "highcharts" %>

                </div>

            </div>
        </div>
    </div>
</div>


<div class="signin-page">
    <div class="signin--page__header">
			<div class="signin-logo tx-center tx-28 tx-bold tx-inverse">
				<%= render 'components/logo/logo' %>
			</div>
		<div class="tx-center mg-b-20">Inscrivez-vous gratuitement!</div>
	</div>
	
	<div class="sigin-page__body">
   
   
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    
      <!-- Profile nested form -->
   <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row">
      <%= f.fields_for :customer do |c| %>

        
          <div class="col-md-6">
            <div class="form-group ">
              <!-- <input type="email" class="form-control" placeholder="Email"> -->
              <%= c.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Prénom", required: true %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group ">
              <!-- <input type="email" class="form-control" placeholder="Email"> -->
              <%= c.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Nom", required: true %>
            </div>
          </div>


          <div class="col-md-12">
            <div class="form-group">
              <%= c.select :civility, CIVILITIES, {prompt: "Sélectionner"}, class: "form-control", required: true %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group ">
              <!-- <input type="email" class="form-control" placeholder="Email"> -->
              <%= c.text_field :phone, autofocus: true, class: "form-control", placeholder: "Téléphone", required: true %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group ">
              <!-- <input type="email" class="form-control" placeholder="Email"> -->
              <%= c.text_field :city, autofocus: true, class: "form-control", placeholder: "Ville", required: true %>
            </div>
          </div>
        

      <% end %>
    </div>
            
        
    <div class="row"> 
      <div class="col-md-12">         

       

        <div class="form-group ">
          <!-- <input type="email" class="form-control" placeholder="Email"> -->
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", required: true %>
        </div>
        <div class="form-group ">
          <!-- <input type="password" class="form-control" placeholder="Password"> -->
          <%= f.password_field :password, autocomplete: "off", class: "form-control",  placeholder: "Mot de passe", required: true %>
        </div>
        <div class="form-group ">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",  placeholder: "Confirmation du mot de passe", required: true %>
         
        </div>
     
       
        <div class="form-group">
          En continuant votre inscription, vous déclarez avoir lu et acceptez les <%= link_to "conditions d'utilisation", root_path %> de la plateforme.
        </div>
      
        <div class="form-group text-center">

          <div class="recaptcha_error">
            
          </div>

          <div>
            
          </div>
        </div>
       
        <!-- /.col -->
        <div class="form-group">
          <!-- <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button> -->
           <%= f.submit "S'inscrire", class: "btn btn-primary btn-block lift" %>
        </div>
        <!-- /.col -->
      
   <% end %>
    </div>
    </div>
              
	<div class="o-line">
        <div class="mg-t-10 tx-center">
			Déjà un compte? <%= link_to "Se connecter", new_account_session_path(), class: "tx-info" %>
		</div>

	</div>
   

</div>
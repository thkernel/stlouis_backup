<%= form_with(model: unity, local: false) do |form| %>
 <div class="modal-body">
     <ul class="errors">
      </ul>

  <div class="form-group">
    <%= form.label :name, "Nom" %>
    <%= form.text_field :name, id: :unity_name, class: "form-control", placeholder: "Nom", required: true  %>
  </div>

  <div class="form-group">
    <%= form.label :unity_symbol,"Symbole" %>
    <%= form.text_field :unity_symbol, id: :unity_unity_symbol, class: "form-control", placeholder: "Symbol"  %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :unity_description, class: "form-control", placeholder: "Description"  %>
  </div>

 

  </div><!-- modal body -->
            <div class="modal-footer">
            <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
            <%= form.submit "Enregistrer", class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
    </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Order Item Drinks</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit price</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_item_drinks.each do |order_item_drink| %>
      <tr>
        <td><%= order_item_drink.order %></td>
        <td><%= order_item_drink.product %></td>
        <td><%= order_item_drink.quantity %></td>
        <td><%= order_item_drink.unit_price %></td>
        <td><%= order_item_drink.amount %></td>
        <td><%= link_to 'Show', order_item_drink %></td>
        <td><%= link_to 'Edit', edit_order_item_drink_path(order_item_drink) %></td>
        <td><%= link_to 'Destroy', order_item_drink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


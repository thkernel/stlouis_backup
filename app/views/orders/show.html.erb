           // link.href = 'style.css'; 
            //var aw = <%= asset_path('application') %>;
  
           // console.log("AW: ", aw);
            // Append link element to HTML head
            //head.appendChild(link); 

           
            a.document.write('<html>');
            //a.document.write(head);
           
            a.document.write('<body>');
